<li data="<%= @item.id %>">
  <input type="checkbox" id="item_<%= @item.id %>"
    class="item-done" <%= if @item.complete, do: "checked" %> />

  <span class="item-description"><%= @item.description %></span>
  <span class="edit-item-description"><input type="text" /></span>
  <span class="edit-item">edit</span>
  <span class="delete-item">delete</span>
</li>
